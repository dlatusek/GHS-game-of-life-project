import java.util.Random;
import java.util.Scanner;
public class Game {
  public static void main(String args[]) {
      Random rand = new Random();
      Scanner input = new Scanner(System.in);
  int health = 100;
  int money = 100;
  int bank = 0;
  int pay = 50;
  int wealth = rand.nextInt(3);
  String name = "";
  System.out.println("What is your name?");
  name = input.nextLine();
  System.out.println("Welcome to the game of life " + name);
  switch(wealth){
      case 0:
          System.out.println("You are born into a wealthy family!");
          money = money + 100000;
          break;
        case 1:
            System.out.println("You are born into a medium income family!");
            money = money + 3000;
          break;
        case 2:
            System.out.println("You are born into a poor family!");
          break;
        
  }
  while(money>0){
  System.out.println("you have " + money + "$");
  System.out.println("What would you like to do?");
  System.out.println("1 - go to work");
  System.out.println("2 - end game");
  int choice = input.nextInt();
  switch(choice){
      case 1:
          System.out.println("you go to work");
          money = money + pay;
          break;
    case 2:
          System.out.println("give up");
          money = -1;
          break;
          
  }
  
  
  } // money is greater than 0
  if(money <0){
      System.out.println("You are bankrupt");
  }
  } // end main
  
} // end myClass
